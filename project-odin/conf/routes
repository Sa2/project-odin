# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# Mapping to /user/search/<string>
POST    /article/search/:word            controllers.ArticleController.search(word: String)
# Mapping to /user/list
GET     /article/list                  controllers.ArticleController.list
# Mapping to /user/edit or /user/edit?id=<number>
GET     /article/edit                  controllers.ArticleController.edit(id: Option[Long] ?= None)
# Mapping to /user/create
POST    /article/create                controllers.ArticleController.create
# Mapping to /user/update
POST    /article/update                controllers.ArticleController.update
# Mapping to /user/remove/<number>
POST    /article/remove/:id            controllers.ArticleController.remove(id: Long)


## User
# Mapping to /user/list
GET     /user/list                  controllers.UserController.list
# Mapping to /user/edit or /user/edit?id=<number>
GET     /user/edit                  controllers.UserController.edit(id: Option[Long] ?= None)
# Mapping to /user/create
POST    /user/create                controllers.UserController.create
# Mapping to /user/update
POST    /user/update                controllers.UserController.update
# Mapping to /user/remove/<number>
POST    /user/remove/:id            controllers.UserController.remove(id: Long)