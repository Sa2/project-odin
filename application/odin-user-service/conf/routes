# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# JSON API
GET         /user/api/v1/alone/:id    controllers.JsonController.getUser(id: Int)
GET         /user/api/v1/list         controllers.JsonController.getUserList
POST        /user/api/v1/create       controllers.JsonController.create
POST        /user/api/v1/update       controllers.JsonController.update
POST        /user/api/v1/lock/:id     controllers.JsonController.lock(id: Int)
POST        /user/api/v1/remove/:id   controllers.JsonController.remove(id: Int)
