# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# JSON API
GET         /json/alone/:id          controllers.JsonController.getUser(id: Int)
GET         /json/list         controllers.JsonController.getUserList
POST        /json/create       controllers.JsonController.create
POST        /json/update/:id   controllers.JsonController.update(id: Int)
POST        /json/remove/:id   controllers.JsonController.remove(id: Int)